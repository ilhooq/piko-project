{
	"name": "ilhooq/piko-project",
	"description": "Skeletton for a Piko based project.",
	"keywords": [
		"yii2",
		"project",
		"piko",
		"micro-framework"
	],
	"type": "project",
	"license": "MIT",
	"require": {
		"oomphinc/composer-installers-extender": "^1.1",
		"ilhooq/piko": "^0.1.0",
		"bower-asset/jquery": "3.3.*@stable",
		"bower-asset/bootstrap": "3.4.*"
	},
	"autoload": {
		"psr-4": {
			"app\\": ""
		}
	},
	"config": {
		"fxp-asset": {
			"enabled": false
		}
	},
	"extra": {
		"installer-types": [
			"bower-asset"
		],
		"installer-paths": {
			"web/assets/{$name}/": [
				"bower-asset/jquery",
				"bower-asset/bootstrap"
			]
		}
	},
	"repositories": [
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
	]
}
